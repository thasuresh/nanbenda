<h1>Friends list</h1> <%= link_to 'Add your details', new_user_path , :id => 'add_link'%>

<table border=1>
		<tr>
			<th>Name</th>
						<th>Email</th>
				
			<th>Website</th>

			<th colspan = 3>Action	</th>
		</tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    
    <td><%= user.email %></td>
    <td><%= user.website %></td>
    
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

